<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Type</th>
    <th>Status</th>
    <th>Checkout date</th>
    <th>Due date</th>
    <th>Library card</th>
    <th>Pickup by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><%= item.type %></td>
    <td><%= item.status_id %></td>
    <td><%= item.checkout_date %></td>
    <td><%= item.due_date %></td>
    <td><%= item.library_card_id %></td>
    <td><%= item.pickup_by %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

